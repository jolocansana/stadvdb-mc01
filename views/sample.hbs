<div id="app" class="row">
  {{>sidebar}}

  <div id="content" class="col-10">
    
    <h1>Query statement goes here</h1>
    
    <div id="search-params">
      <h3>
        Search Parameters
      </h3>
      
      <!-- Form: don't forget to change action to appropriate -->
      <form method="POST" action="/" enctype='application/x-www-form-urlencoded' novalidate>
        <div class="input">
          <!-- Duplicate this for more inputs. Change id and name of input. -->
          <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Player ID</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" placeholder="PlayerID" id="playerid" name="playerid">
            </div>
          </div>
          
          <!-- SUBMIT BUTTON NO NEED TO CHANGE -->
          <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
              <button type="submit" class='btn btn-success'>Render Report</button>
            </div>
          </div>
          
        </div>
      </form>

      <b>Time Elapsed: </b> {{time}}

    </div>
    
    <div id="table-holder">
      <!-- TODO: Change table headers to appropirate results' headers-->
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>College</th>
            <th>Country</th>
            <th>Draft_ID</th>
          </tr>
        </thead>
        <tbody id='tableBody'>
          {{#each result}}
            <tr><td>{{PlayerID}}</td><td>{{Name}}</td><td>{{Country}}</td><td>{{College}}</td><td>{{Draft_ID}}</td></tr>
          {{/each}}
        </tbody>
      </table>
    </div>

  </div>
</div>